{
  "name": "@apwide/uikit",
  "version": "5.4.0",
  "description": "Apwide ui components",
  "main": "dist/uikit.js",
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "scripts": {
    "build": "webpack --mode=production --node-env=production",
    "storybook": "start-storybook -p 9001 -s ./public -c .storybook --ci",
    "lint": "eslint src stories tests --ext .js,.vue,.ts",
    "lint-fix": "eslint src stories tests --fix --ext .js,.vue,.ts",
    "test": "npm run lint && jest && concurrently 'npm run storybook' 'npm run cypress:test' -k -s first",
    "unit": "jest",
    "test:watch": "jest --verbose --watchAll --notify",
    "build-storybook": "build-storybook -c .storybook -o docs",
    "cypress:test": "wait-on http://localhost:9001 && cypress run",
    "cypress:run": "cypress run",
    "cypress:open": "cypress open",
    "prepublishOnly": "npm run build",
    "prepare": "husky install"
  },
  "sideEffects": [
    "*.css"
  ],
  "keywords": [
    "vue",
    "atlassian"
  ],
  "author": "Apwide",
  "license": "MIT",
  "devDependencies": {
    "@atlaskit/css-reset": "7.3.7",
    "@babel/helper-plugin-utils": "7.27.1",
    "@babel/plugin-proposal-nullish-coalescing-operator": "7.18.6",
    "@babel/plugin-proposal-numeric-separator": "7.18.6",
    "@babel/plugin-proposal-object-rest-spread": "7.20.7",
    "@babel/plugin-proposal-optional-chaining": "7.21.0",
    "@babel/preset-env": "7.28.3",
    "@babel/preset-typescript": "7.27.1",
    "@storybook/vue": "5.3.21",
    "@types/dompurify": "^3.0.4",
    "@typescript-eslint/eslint-plugin": "5.62.0",
    "@vue/cli-plugin-babel": "5.0.9",
    "@vue/eslint-config-standard": "8.0.1",
    "@vue/eslint-config-typescript": "11.0.3",
    "@vue/test-utils": "1.3.6",
    "@vue/vue2-jest": "29.2.6",
    "babel-loader": "8.3.0",
    "babel-preset-typescript-vue": "1.1.1",
    "babel-preset-vue": "2.0.2",
    "concurrently": "9.2.1",
    "core-js": "3.45.1",
    "css-loader": "5.2.7",
    "cypress": "4.12.1",
    "cypress-plugin-tab": "1.0.5",
    "dompurify": "3.2.7",
    "eslint": "8.53.0",
    "eslint-config-prettier": "8.10.0",
    "eslint-config-standard": "17.1.0",
    "eslint-import-resolver-alias": "1.1.2",
    "eslint-plugin-cypress": "2.15.1",
    "eslint-plugin-import": "2.29.0",
    "eslint-plugin-jest": "27.6.0",
    "eslint-plugin-standard": "5.0.0",
    "eslint-plugin-vue": "9.18.1",
    "faker": "5.5.3",
    "file-loader": "6.2.0",
    "html-loader": "1.3.2",
    "husky": "9.1.7",
    "jest": "29.7.0",
    "jest-environment-jsdom": "29.7.0",
    "lint-staged": "13.3.0",
    "mini-css-extract-plugin": "1.6.2",
    "prettier": "2.8.8",
    "storybook-addon-vue-info": "1.4.2",
    "style-loader": "3.3.3",
    "ts-jest": "29.4.3",
    "ts-loader": "9.5.4",
    "typescript": "5.9.2",
    "typescript-eslint": "0.0.1-alpha.0",
    "vue": "2.7.16",
    "vue-loader": "15.11.1",
    "vue-svg-loader": "0.16.0",
    "vue-template-compiler": "2.7.16",
    "wait-on": "9.0.0",
    "webpack": "4.47.0",
    "webpack-cli": "4.10.0"
  },
  "peerDependencies": {
    "vue": "2.7.x"
  },
  "lint-staged": {
    "*.{js,vue}": [
      "jest --bail --findRelatedTests",
      "npm run lint-fix"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "npx --no-install lint-staged"
    }
  },
  "dependencies": {
    "@floating-ui/dom": "^1.6.13",
    "@fortawesome/fontawesome-svg-core": "1.2.36",
    "@fortawesome/free-brands-svg-icons": "5.15.4",
    "@fortawesome/free-regular-svg-icons": "5.15.4",
    "@fortawesome/free-solid-svg-icons": "5.15.4",
    "@fortawesome/vue-fontawesome": "2.0.10",
    "date-fns": "2.30.0",
    "date-fns-tz": "2.0.0",
    "easymde": "2.20.0",
    "vue-promised": "1.2.2"
  }
}
